<h2>Create a property listing</h2>

<form action="/listings" method="post">
  <label for="street_address">
    Street Address: <input type="text" name="street_address">
  </label>
  <label for="city">
    City: <input type="text" name="city">
  </label>
  <label for="description">
    Description: <textarea name="description" cols="40" rows="5" maxlength="150">
    </textarea>
  </label>
  <label for="price">
    Price per night: <input type="text" name="price">
  </label>
  <input type="submit" value="Create listing">
</form>
